<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
				 backupStaticAttributes="false"
				 colors="true"
				 convertErrorsToExceptions="true"
				 convertNoticesToExceptions="true"
				 convertWarningsToExceptions="true"
				 processIsolation="false"
				 stopOnFailure="false"
				 syntaxCheck="false"
				 bootstrap="bootstrap.php"
		>
	<testsuites>
		<testsuite name="WP Forms Test Suite">
			<directory>./test_cases/general</directory>
			<directory>./test_cases/elements</directory>
			<directory>./test_cases/views</directory>
			<directory>./test_cases/decorators</directory>
			<directory>./test_cases/forms</directory>
		</testsuite>
	</testsuites>
</phpunit>